<aside class="categories">
  <nav class="text-dark nav flex-column nav-pills " >
    {% set allactive = ( categories.active ) ? '' : 'active bg-dark text-white ' %}
    <a href="index.php" class="nav-link  {{allactive}}  " " style = "color:inherit;">All Categories</a>
    {% for category in categories.items %}
      {% set active = ( categories.active == category.category_id ) ? 'active bg-dark text-white ' : ''  %}
      <a href="index.php?category_id={{category.category_id}}" class="nav-link  {{active}}   " style = "color:inherit;">
        {{category.category_name}}
      </a>
    {% endfor %}
  </nav>
</aside> 